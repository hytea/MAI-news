{
  "name": "news-curator",
  "version": "1.0.0",
  "description": "AI-powered news curation platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:all": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:api": "npm run test --workspace=@news-curator/api",
    "test:web": "npm run test --workspace=@news-curator/web",
    "test:shared": "npm run test --workspace=@news-curator/shared",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit test-all",
    "test:docker:coverage": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit test-coverage",
    "test:docker:api": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit test-api",
    "test:docker:web": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit test-web",
    "test:docker:clean": "docker-compose -f docker-compose.test.yml down -v",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  }
}
